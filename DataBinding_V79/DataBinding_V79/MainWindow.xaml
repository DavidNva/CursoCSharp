<Window x:Class="DataBinding_V79.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding_V79"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="MiTextBox2" Width="150" Height="35" Margin="60" FontSize="30" HorizontalContentAlignment="Right" 
                 Text="{Binding ElementName=MiSlider2,Path=Value,Mode=OneWay}"></TextBox>
        <Slider Width="350" Name="MiSlider2" Minimum="0" Maximum="100"></Slider>
    </StackPanel>
</Window>
